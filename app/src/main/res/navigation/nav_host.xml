<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/getStarted">

    <fragment
        android:id="@+id/splashscreenFragment"
        android:name="com.starthub.securityApp.GetStarted"
        android:label="fragment_get_started"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashscreenFragment_to_welcomeFragment"
            app:destination="@id/getStarted" />
    </fragment>
    <action
        android:id="@+id/action_getStarted_to_welcomeFragment"
        app:destination="@id/onBoardingFragment" />

    <fragment
        android:id="@+id/getStarted"
        android:name="com.starthub.securityApp.GetStarted"
        android:label="fragment_get_started"
        tools:layout="@layout/fragment_get_started" >
        <action
            android:id="@+id/action_getStarted_to_welcomeFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.starthub.securityApp.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.starthub.securityApp.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword2"
        android:name="com.starthub.securityApp.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.starthub.securityApp.OnBoardingFragment"
        android:label="OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding"
        >
        <action
            android:id="@+id/onboarding_to_signUp_graph"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.starthub.securityApp.GuardSessionFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_guard_seesion" />
